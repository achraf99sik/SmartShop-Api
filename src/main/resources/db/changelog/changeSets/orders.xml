<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="4-create-orders-table" author="achraf">
        <createTable tableName="orders">

            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>

            <column name="client_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>
            <column name="subtotal_ht" type="DECIMAL(10,2)"/>
            <column name="remise" type="DECIMAL(10,2)"/>
            <column name="montant_ht_after_remise" type="DECIMAL(10,2)"/>
            <column name="tva" type="DECIMAL(10,2)"/>
            <column name="total_ttc" type="DECIMAL(10,2)"/>
            <column name="montant_restant" type="DECIMAL(10,2)" defaultValueNumeric="0.00"/>

            <column name="promo_code" type="VARCHAR(20)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="orders"
                baseColumnNames="client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                constraintName="fk_order_client"/>
    </changeSet>
</databaseChangeLog>