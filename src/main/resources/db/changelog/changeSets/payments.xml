<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6-create-payments-table" author="achraf">
        <createTable tableName="payments">

            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>

            <column name="order_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="numero_paiement" type="INT"/>
            <column name="montant" type="DECIMAL(10,2)"/>
            <column name="type" type="VARCHAR(20)"/>
            <column name="status" type="VARCHAR(20)"/>

            <column name="reference" type="VARCHAR(100)"/>
            <column name="banque" type="VARCHAR(100)"/>

            <column name="date_paiement" type="DATE"/>
            <column name="date_encaissement" type="DATE"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="payments"
                baseColumnNames="order_id"
                referencedTableName="orders"
                referencedColumnNames="id"
                constraintName="fk_payment_order"/>
    </changeSet>
</databaseChangeLog>